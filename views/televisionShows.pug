extends layout

block content
  h1= title
  
  - let result = results;
  div(class="container-fluid")
    div(class="row")
      each value in result
        - let destination = `dispatch(\"/resource/update?id=${value._id}\")`
        div(class="col-sm-2", onClick=`buy(${idx+1})`, style="padding:10px") Name: #{value.ts_name} Runtime: #{value.ts_runtime} Broadcast Channel: #{value.ts_broadcastchannel}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
    function dispatch(path){ 
      window.location.href=path 
    } 